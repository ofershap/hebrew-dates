{
  "name": "hebrew-dates",
  "version": "1.0.0",
  "description": "Modern Hebrew/Jewish calendar library for TypeScript â€” holidays, date conversion, formatting in Hebrew",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "hebrew",
    "jewish",
    "calendar",
    "holidays",
    "israel",
    "date",
    "luach",
    "parsha",
    "jewish-calendar"
  ],
  "author": "Ofer Shapira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ofershap/hebrew-dates.git"
  },
  "bugs": {
    "url": "https://github.com/ofershap/hebrew-dates/issues"
  },
  "homepage": "https://github.com/ofershap/hebrew-dates#readme",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "sideEffects": false
}
